{
  "pkg_manager": "apt",
  "instructions": [
    ["base", "neurodebian"],
    [
      "ants",
      {
        "version": "2.3.1"
      }
    ],
    [
      "fsl",
      {
        "version": "6.0.1"
      }
    ],
    [
      "mrtrix3",
      {
        "version": "3.0.0"
      }
    ],
    [
      "freesurfer",
      {
        "version": "6.0.0-min"
      }
    ],
    [
      "matlabmcr",
      {
        "version": "2012b"
      }
    ],
    ["install", ["git", "ssh", "tar", "gzip", "ca-certificates"]],
    [
      "miniconda",
      {
        "create_env": "tracts",
        "conda_install": ["python=3.7.3", "dipy", "nibabel", "nipype", "matplotlib", "pytest"],
        "pip_install": ["pybids", "fastcore==0.1.11", "nilearn"]
      }
    ],
    ["run-bash", ["source activate tracts", "cd $FREESURFER_HOME && ln -s /opt/matlabmcr-2012b MCRv80"]],
    ["copy", ["/Applications/freesurfer/license.txt" "/license.txt"]],
    ["envs", ["FS_LICENSE=/license.txt"]]
  ]
}
