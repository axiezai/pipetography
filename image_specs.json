{
  "pkg_manager": "apt",
  "instructions": [
    ["base", "debian:stretch"],
    ["mrtrix3", {"version": "3.0.0"}],
    ["ants", {"version": "2.3.1"}],
    ["fsl", {"version": "6.0.1"}],
    ["matlabmcr", {"version": "2012b"}],
    ["freesurfer", {"version": "6.0.0-min"}],
    ["miniconda",
      {"create_env": "tracts",
        "conda_install": ["python=3.7.3", "pip=20.0.2", "dipy", "nipype", "nibabel", "pytest", "matplotlib"],
        "pip_install": ["pybids", "fastcore==0.1.11", "nilearn", "pipetography==0.2.4"]}],
    ["copy", ["license.txt", "/license.txt"]],
    ["install", ["git", "ssh", "tar", "gzip", "ca-certificates"]],
    ["run_bash", "cd /opt/freesurfer-6.0.0-min && ln -s /opt/matlabmcr-2012b/v80 MCRv80 && mv /license.txt ."],
    ["env", {"FS_LICENSE": "/license.txt"}]
  ]
}
